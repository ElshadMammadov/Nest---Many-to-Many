@model List<Order>
@using PustokImagesUploadTask.Enums
@{
    int counter = 0;
    string[] colors = { "light", "success", "danger" };
}

<div class="container pt-5 pb-5">

    <div class="container">
        <h3 style="text-align:center">Order History</h3>
    </div>
    <div>

        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Order Id</th>
                    <th scope="col">FullName</th>
                    <th scope="col">Order Status</th>
                    <th scope="col">Total Price</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@item.Id</td>
                        <td>@item.FullName</td>
                        <td><span style="font-size:15px" class="badge badge-@colors[(item.Status==OrderStatus.Pending?0 : ( item.Status==OrderStatus.Accepted ? 1 : 2)) ]">@item.Status</span></td>
                        <td>@item.TotalPrice.ToString("0.00")</td>
                        <td>
                            <a asp-action="detail" asp-controller="order" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-success">Detail</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

