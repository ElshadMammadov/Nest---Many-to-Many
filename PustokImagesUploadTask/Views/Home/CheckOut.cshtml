
@model OrderViewModel

@{
	double total = 0;
	double saletotal = 0;
}

<section class="breadcrumb-section">
	<h2 class="sr-only">Site Breadcrumb</h2>
	<div class="container">
		<div class="breadcrumb-contents">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="index.html">Home</a></li>
					<li class="breadcrumb-item active">Checkout</li>
				</ol>
			</nav>
		</div>
	</div>
</section>
<main id="content" class="page-section inner-page-sec-padding-bottom space-db--20">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<!-- Checkout Form s-->
				<div class="checkout-form">
					<div class="row row-40">
						
						<div class="col-lg-7 mb--20">
							<!-- Billing Address -->
							<div id="billing-form" class="mb-40">
								<h4 class="checkout-title">Billing Address</h4>
								<form asp-action="order" asp-controller="home" method="post" id="orderForm">
									<div class="row">
										<div class="col-md-6 col-12 mb--20">
											<label asp-for="FullName">FullName*</label>
											<input asp-for="FullName" placeholder="FullName">
											<span asp-validation-for="FullName" class="text-danger"></span>
										</div>
										<div class="col-md-6 col-12 mb--20">
											<label asp-for="Country">Country*</label>
											<input asp-for="Country" placeholder="Country">
											<span asp-validation-for="Country" class="text-danger"></span>
										</div>

										<div class="col-md-6 col-12 mb--20">
											<label asp-for="Email">E-mail Address*</label>
											<input asp-for="Email" placeholder="E-Mail Address">
											<span asp-validation-for="Email" class="text-danger"></span>
										</div>
										<div class="col-md-6 col-12 mb--20">
											<label asp-for="PhoneNumber">PhoneNumber*</label>
											<input asp-for="PhoneNumber" placeholder="PhoneNumber">
											<span asp-validation-for="PhoneNumber" class="text-danger"></span>
										</div>
										<div class="col-md-12 col-12 mb--20">
											<label asp-for="Address">Address*</label>
											<input asp-for="Address" placeholder="Address">
											<span asp-validation-for="Address" class="text-danger"></span>
										</div>
										<div class="col-md-6 col-12 mb--20">
											<label asp-for="City">City*</label>
											<input asp-for="City" placeholder="City">
											<span asp-validation-for="City" class="text-danger"></span>
										</div>
										<div class="col-md-6 col-12 mb--20">
											<label asp-for="ZipCode">ZipCode*</label>
											<input asp-for="ZipCode" placeholder="ZipCode">
											<span asp-validation-for="ZipCode" class="text-danger"></span>
										</div>
										<div class="col-2"></div>
										<div class="order-note-block mt--30 col-8">
											<label asp-for="Note">Order notes</label>
											<textarea asp-for="Note" cols="30" rows="10" class="order-note" placeholder="Notes about your order"></textarea>
											<span asp-validation-for="Note"></span>
										</div>
									</div>
								</form>
								
							</div>
							
						</div>
						<div class="col-lg-5">
							<div class="row">
								<!-- Cart Total -->
								<div class="col-12">
									<div class="checkout-cart-total">
										<h2 class="checkout-title">YOUR ORDERS</h2>
										<h4>Product  <span>Total</span></h4>

										<ul>
										@foreach(var item in Model.CheckOutViewModels)
										{
												double saleprice = item.Book.SalePrice * item.Count; 
												double price = item.Book.SalePrice * (1 - item.Book.DiscountPrice / 100) * item.Count;
												<li>
												<span class="left"> @item.Book.Name  X  @item.Count</span> <span class="right">$@price</span>
												</li>
												total = total + price;
												saletotal += saleprice;
										}

											
										</ul>
										<p>Sale Price Total <span>$@saletotal</span></p>
										<p>Discount Total <span>$@(saletotal-total)</span></p>
										<h4>Grand Total <span>$@total</span></h4>
										<div class="method-notice mt--25">
											<article>
												<h3 class="d-none sr-only">blog-article</h3>
												Sorry, it seems that there are no available payment methods for
												your state. Please contact us if you
												require
												assistance
												or wish to make alternate arrangements.
											</article>
										</div>
										<div class="term-block">
											<input type="checkbox" id="accept_terms2">
											<label for="accept_terms2">
												I’ve read and accept the terms &
												conditions
											</label>
										</div>
										<button type="submit" form="orderForm" class="place-order w-100">Place order</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>
	</div>
